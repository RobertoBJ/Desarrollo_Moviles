<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LauncherActivity">

    <!-- BOTÓN DE CONFIGURACIÓN (izquierda) -->
    <LinearLayout
        android:id="@+id/btn_configuracion"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#D3D3D3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnConfig"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/ic_cog"
            android:contentDescription="Configuración" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- BOTÓN MENÚ (solo imagen) -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
        android:src="@drawable/ic_menu"
        android:contentDescription="Menú"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:scaleType="centerInside"
        android:tint="@android:color/black"/> <!-- color del ícono, cámbialo si quieres -->


    <!-- SECCIÓN DE BOTONES -->
    <LinearLayout
        android:id="@+id/layout_opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- BOTÓN: TU CUENTA -->
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_button"
            android:gravity="center_vertical"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user"
                android:contentDescription="Tu cuenta" />

            <Button
                android:id="@+id/btnCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Tu cuenta"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingStart="10dp" />
        </LinearLayout>

        <!-- BOTÓN: SEGURIDAD -->
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_button"
            android:gravity="center_vertical"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:contentDescription="Seguridad" />

            <Button
                android:id="@+id/btnSeguridad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Seguridad"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingStart="10dp" />
        </LinearLayout>

        <!-- BOTÓN: CALIFÍCANOS -->
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:gravity="center_vertical"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Califícanos" />

            <Button
                android:id="@+id/btnCalificanos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Califícanos"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingStart="10dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
